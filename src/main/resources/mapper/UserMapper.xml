<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leekari.dao.UserDao">

    <resultMap type="com.leekari.entity.User" id="BaseResultMap">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="loginName" column="login_name" jdbcType="VARCHAR"/>
        <result property="picture" column="picture" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="lastOperationTime" column="last_operation_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="baseColumn">
        id,login_name,username,password,phone,picture,role,create_time,last_operation_time
    </sql>

    <insert id="insertUser" parameterType="com.leekari.entity.User">
        insert into log_record(<include refid="baseColumn"></include>)
        values(#{id,jdbcType=VARCHAR},#{loginName,jdbcType=VARCHAR},#{username,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},#{phone,jdbcType=VARCHAR},
        #{picture,jdbcType=VARCHAR},#{role,jdbcType=VARCHAR},#{create_time,jdbcType=TIMESTAMP},#{last_operation_time,jdbcType=TIMESTAMP})
    </insert>

</mapper>