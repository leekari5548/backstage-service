<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leekari.dao.UserDao">

    <resultMap type="com.leekari.entity.User" id="BaseResultMap">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="picture" column="picture" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="lastOperationTime" column="last_operation_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="baseColumn">
        id,`email`,nickname,password,phone,picture,`role`,create_time,last_operation_time
    </sql>

    <insert id="insertUser" parameterType="com.leekari.entity.User">
        insert into `user`(<include refid="baseColumn"></include>)
        values(#{id,jdbcType=VARCHAR},#{email,jdbcType=VARCHAR},#{nickname,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},#{phone,jdbcType=VARCHAR},
        #{picture,jdbcType=VARCHAR},#{role,jdbcType=INTEGER},#{createTime,jdbcType=TIMESTAMP},#{lastOperationTime,jdbcType=TIMESTAMP})
    </insert>

    <select id="getUsers" parameterType="string" resultType="int">
        select count(*)
        from `user`
        where phone = #{phone,jdbcType=VARCHAR} or email = #{email,jdbcType=VARCHAR}
    </select>

    <select id="getUserById" parameterType="string" resultMap="BaseResultMap">
        select <include refid="baseColumn"></include>
        from `user`
        where id = #{id, jdbcType=VARCHAR}
    </select>

    <select id="getAllUsers" resultMap="BaseResultMap">
        select <include refid="baseColumn"></include>
        from `user`
    </select>

    <select id="getUserInfo" parameterType="string" resultMap="BaseResultMap">
        select <include refid="baseColumn"></include>
        from `user`
        <where>
            <if test="id != null and id != ''">
                and id = #{id,jdbcType=VARCHAR}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone,jdbcType=VARCHAR}
            </if>
            <if test="email != null and email != ''">
                and email = #{email,jdbcType=VARCHAR}
            </if>
            <if test="password != null and password != ''">
                and password = #{password,jdbcType=VARCHAR}
            </if>
        </where>
        limit 0,1
    </select>

</mapper>