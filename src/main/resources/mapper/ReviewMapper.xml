<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leekari.dao.ReviewDao">

    <resultMap type="com.leekari.entity.Review" id="BaseResultMap">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="fromUserId" column="from_user_id" jdbcType="VARCHAR"/>
        <result property="toUserId" column="to_user_id" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="targetId" column="target_id" jdbcType="VARCHAR"/>

        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="deleted" column="is_deleted" jdbcType="INTEGER"/>

    </resultMap>

    <sql id="baseColumn">
        id,from_user_id,to_user_id,content,create_time,status,is_deleted,target_id
    </sql>

    <select id="getReviewByArticle" parameterType="string" resultMap="BaseResultMap">
        select <include refid="baseColumn"></include>
        from review
        where target_id = #{id,jdbcType=VARCHAR} and is_deleted = 0 and status = 0
        order by create_time desc
    </select>

    <insert id="insertReview" parameterType="com.leekari.entity.Review">
        insert into review(<include refid="baseColumn"></include>)
        values(
        #{id,jdbcType=VARCHAR},
        #{fromUserId,jdbcType=VARCHAR},
        #{toUserId,jdbcType=VARCHAR},
        #{content,jdbcType=VARCHAR},
        #{createTime,jdbcType=TIMESTAMP},
        #{status,jdbcType=INTEGER},
        #{deleted,jdbcType=INTEGER},
        #{targetId,jdbcType=VARCHAR}
        )
    </insert>

</mapper>