<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leekari.dao.CarouselImageDao">

    <resultMap type="com.leekari.entity.CarouselImage" id="BaseResultMap">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="imageId" column="image_id" jdbcType="VARCHAR"/>
        <result property="source" column="source" jdbcType="INTEGER"/>
        <result property="createUser" column="create_user" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="deleted" column="is_deleted" jdbcType="INTEGER"/>
        <result property="order" column="order" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="baseColumn">
        id,image_id,`source`,create_user,create_time,is_deleted,`order`
    </sql>

    <sql id="baseColumnWithoutId">
        image_id,`source`,create_user,create_time,is_deleted,`order`
    </sql>

    <select id="getCarouselImage" resultMap="BaseResultMap" parameterType="int">
        select <include refid="baseColumn"></include>
        from carousel_img
        where is_deleted = 0 and `source` = #{type,jdbcType=INTEGER}
        order by `order` asc
    </select>

    <update id="deleteCarousels" parameterType="list">
        update carousel_img
        set is_deleted = 1
        where id in
        <foreach collection="idList" index="index" item="item" separator="," close=")" open="(">
            #{item,jdbcType=VARCHAR}
        </foreach>
    </update>

    <insert id="insertCarousel" parameterType="com.leekari.entity.CarouselImage">
        insert into carousel_img(<include refid="baseColumn"></include>)
        values(#{id,jdbcType=VARCHAR},#{imageId,jdbcType=VARCHAR},#{source,jdbcType=INTEGER},#{createUser,jdbcType=VARCHAR},
        #{createTime,jdbcType=TIMESTAMP},#{deleted,jdbcType=INTEGER},#{order,jdbcType=INTEGER})
    </insert>
</mapper>